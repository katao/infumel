<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<!--タブコンポーネントを使ってHTMLコーディング-->
<div class="m-t-1 m-l-1 m-r-1">
  <!--タブのボタン部分-->
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a href="#tab1" class="nav-link bg-primary" data-toggle="tab">「A」が韻のアイドル</a>
    </li>
    <li class="nav-item">
      <a href="#tab2" class="nav-link bg-primary" data-toggle="tab">「I」が韻のアイドル</a>
    </li>
    <li class="nav-item">
      <a href="#tab3" class="nav-link bg-primary" data-toggle="tab">「U」が韻のアイドル</a>
    </li>
    <li class="nav-item">
      <a href="#tab4" class="nav-link bg-primary" data-toggle="tab">「E」が韻のアイドル</a>
    </li>
    <li class="nav-item">
      <a href="#tab5" class="nav-link bg-primary" data-toggle="tab">「O」が韻のアイドル</a>
    </li>
  </ul>
  <!--タブのコンテンツ部分-->
  <div class="tab-content">
    <div id="tab1" class="tab-pane active">
      <%= render 'table', characters: @characters[0] %>
    </div>
    <div id="tab2" class="tab-pane">
      <%= render 'table', characters: @characters[1] %>
    </div>
    <div id="tab3" class="tab-pane">
      <%= render 'table', characters: @characters[2] %>
    </div>
    <div id="tab4" class="tab-pane">
      <%= render 'table', characters: @characters[3] %>
    </div>
    <div id="tab5" class="tab-pane">
      <%= render 'table', characters: @characters[4] %>
    </div>
  </div>
</div>
