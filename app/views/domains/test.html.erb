
<h1>Domains</h1>

<div class="container">
  <%= @alert %>
  <%= search_form_for @q, class: 'form-inline', url: '/domains/test' do |f| %>
    <div class="form-group">
      <%= f.label 'ドメインを探したい単語を「ひらがな」で入力して下さい。' %><br />
      <%= f.text_field :name_end, { value: @search_word, class: 'form-control' } %>
      <%= f.submit 'search', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
<br>

<div class="container">
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Site</th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= domain.id %></td>
        <td><%= domain.name %></td>
        <td><%= domain.url %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
